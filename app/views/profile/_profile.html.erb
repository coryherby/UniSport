  <div class="row" ng-controller="profileController">
    <div class="col-md-offset-2 col-md-8 col-xs-offset-1 col-xs-10">
      <div class="well panel panel-default">
        <div class="panel-body">
          <div class="row row-eq-height">
            <div class="col-xs-offset-3 col-xs-6 col-sm-offset-0 col-sm-3 text-center">
              <%= image_tag(current_user.filename, class: "center-block img-circle img-thumbnail img-responsive") %>
            </div>

            <div class="col-xs-12 col-sm-9">
              <a href="#" class="navbar-link" data-toggle="modal" data-target="#modifyProfile">
                <i id="settings" class="fa fa-cog fa-lg pull-right" aria-hidden="true"></i>
              </a>
              <h2>{{profileData.first_name}} {{profileData.last_name}}</h2>
              <p><strong>University: </strong> {{profileData.university_name}} </p>
              <p><strong>Description: </strong> {{profileData.description}}</p>
              <p><strong>Telephone number: </strong> {{profileData.telephone_number}}</p>

              <!-- <p><strong>Favourites Sports: </strong>
              <p><strong>University: </strong>{{profileData.university_name}}</p>
              <p><strong>Description: </strong>{{profileData.description}}</p>
              <p><strong>Favourites Sports: </strong>
                <span class="label label-success tags" ng-click="test()">Rugby</span>
                <span class="label label-success tags">Gym</span>
                <span class="label label-success tags">Running</span>
              </p> -->

            </div>
          </div>
        </div>
      </div>

      <div class="modal fade" id="modifyProfile" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
          <div class="modal-content">

            <%= form_tag(profile_path(@profile), method: :put, multipart: true) do -%>
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Modify Profile Information</h4>
              </div>

              <div class="modal-body">

                <div class="row">
                  <div class="form-group col-md-12">
                    <%= text_field_tag 'first_name', nil, placeholder:'First Name', :class => "form-control"%>
                  </div>
                </div>

                <div class="row">
                  <div class="form-group col-md-12">
                    <%= text_field_tag 'last_name', nil, placeholder: 'Last Name', :class => "form-control"%>
                  </div>
                </div>

                <div class="row">
                  <div class="form-group col-md-12">
                    <%= text_field_tag 'telephone_number', nil, placeholder: 'Telephone Number', :class => "form-control"%>
                  </div>
                </div>

                <div class="row">
                  <div class="form-group col-md-12">
                    <%= text_field_tag 'description', nil, placeholder: 'Description', :class => "form-control"%>
                  </div>
                </div>

                <%= file_field_tag 'image', placeholder: 'Profile picture' %>

              </div>

              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <%= submit_tag "Save Profile", :class => "btn btn-primary" %>
              </div>

            <% end %>
          </div>

        </div>
      </div>
    </div>

  </div>
