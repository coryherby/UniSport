<div ng-controller="filterController">
  <div class="row">

    <div class="col-md-offset-2 col-md-2">
      <angucomplete-alt id="universitySelection"
                selected-object="universitySelected"
                title-field="university_location"
                search-fields="university_location"
                placeholder="University"
                minlength="1"
                match-class="highlightLetters"
                local-data="events"
                text-searching="Finding matching Universities"
                text-no-results="Sorry, could not find this University"
                auto-match="true"
                focus-first="true"
                input-class="form-control form-control-small"
                pause="0"
                input-changed="inputUniversityUpdated">
      </angucomplete-alt>
    </div>

    <div class="btn-group col-md-2 dropdown">
      <button type="button" class="btn btn-default btn-block dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
        {{selectedSport}} </span>
      </button>
      <ul class="dropdown-menu col-md-2">
        <li ng-repeat="sport in sports">
          <div class="dropdown-item" ng-click="$parent.updateSport(sport.name)">{{sport.name}}</div>
        </li>
      </ul>
    </div>

    <div class="col-md-2">
      <div class="input-group date" data-provide="datepicker" data-date-format="DD dd MM" data-date-autoclose="true"
          data-date-clear-btn="true" data-date-today-highlight="true" data-date-max-view-mode="0">
        <input type="text" class="form-control" ng-model="getFeedScope().filterDate" id="input-date" readonly>
        <div class="input-group-addon">
          <span class="glyphicon glyphicon-th"></span>
        </div>
      </div>
    </div>

    <div class="btn-group col-md-2" id="uni_toggle_checkbox">
      <input type="checkbox" checked data-toggle="toggle" data-off="Only my University" data-on="All universities"
          data-style="slow" data-width="100%" data-onstyle="default" data-offstyle="default">
    </div>

  </div>
</div>
